<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#eeeeee"
    tools:context="com.example.mobilesdblack.ejemplo2.NoShow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lblFecha">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INDICAR NO SHOW"
            android:id="@+id/lblWizard1"
            android:textStyle="bold"
            android:background="#ee7d00"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Cancelar"
            android:id="@+id/btnCancelarCambioCupon"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="25dp"
            android:background="#dd4262"
            android:onClick="CancelarNoShow"
            android:layout_marginBottom="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Motivo:"
            android:id="@+id/lblObservaciones"
            android:textSize="30dp"
            android:textColor="#6E6E6E"
            android:gravity="right"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMotivoNoShow"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:background="@drawable/edittextstyle"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/btnCambiarPAX"
            android:layout_alignTop="@+id/lblObservaciones"
            android:layout_alignRight="@+id/btnCambiarPAX"
            android:layout_alignEnd="@+id/btnCambiarPAX"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="NO SHOW"
            android:id="@+id/btnCambiarPAX"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="25dp"
            android:background="#1e9267"
            android:onClick="FinalizarNoShow"
            android:layout_alignTop="@+id/btnCancelarCambioCupon"
            android:layout_toRightOf="@+id/btnCancelarCambioCupon"
            android:layout_toEndOf="@+id/btnCancelarCambioCupon"
            android:layout_marginLeft="163dp"
            android:layout_marginStart="163dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Número de Folio:"
            android:id="@+id/textView32"
            android:textSize="30dp"
            android:layout_marginTop="35dp"
            android:textColor="#6E6E6E"
            android:gravity="right"
            android:layout_marginLeft="264dp"
            android:layout_marginStart="264dp"
            android:layout_below="@+id/lblGuiaCupon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEntregoNoShow"
            android:textAlignment="center"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:background="@drawable/edittextstyle"
            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_alignRight="@+id/txtMotivoNoShow"
            android:layout_alignEnd="@+id/txtMotivoNoShow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cupón"
            android:id="@+id/lblGuiaCupon"
            android:textSize="30dp"
            android:textColor="#6E6E6E"
            android:gravity="right"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/lblWizard1"
            android:layout_toLeftOf="@+id/txtAutorizaSinCupon"
            android:layout_toStartOf="@+id/txtAutorizaSinCupon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="---------"
            android:id="@+id/txtCupon"
            android:textSize="30dp"
            android:textColor="#6E6E6E"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/lblGuiaCupon"
            android:layout_alignTop="@+id/lblGuiaCupon"
            android:layout_alignRight="@+id/txtAutorizaSinCupon"
            android:layout_alignEnd="@+id/txtAutorizaSinCupon" />

        <EditText
            android:id="@+id/txtAutorizaSinCupon"
            android:layout_width="50px"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_alignEnd="@+id/txtEntregoNoShow"
            android:layout_alignRight="@+id/txtEntregoNoShow"
            android:layout_toRightOf="@+id/textView32"
            android:background="@drawable/edittextstyle"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="¿A quién se entregó?"
            android:id="@+id/textView7"
            android:textSize="30dp"
            android:layout_marginTop="33dp"
            android:textColor="#6E6E6E"
            android:gravity="right"
            android:layout_below="@+id/textView32"
            android:layout_alignRight="@+id/textView32"
            android:layout_alignEnd="@+id/textView32" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblFecha"
        android:background="#ee7d00"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
