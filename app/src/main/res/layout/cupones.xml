<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="12">

    <LinearLayout
        android:id="@+id/lay_top_cupones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <TextView
            android:id="@+id/lblnumCupon"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="CUPON"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblAdultos"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="A"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblNinos"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="N"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblI"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="I"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblIncentivos"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="IC"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblHuesped"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="NOMBRE"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lbl_Hotel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="HOTEL"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lbl_Habitacion"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="HAB"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/lbl_Idioma"
            android:layout_width="0px"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center" />

        <TextView
            android:id="@+id/lbl_Pickuplobby"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Pick Up LOBBY"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lbl_Agencia"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="AGENCIA"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lbl_Representante"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="REP"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lbl_ididioma"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lbl_tour_padre"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lbl_id_detalleov"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lbl_apoyo"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#6E6E6E"
            android:textSize="20dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lbl_Observaciones"
            android:layout_width="0px"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnhe"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="ENTRADA" />

        <TextView
            android:id="@+id/lblhe"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Lorem ipsu"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnhs"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="SALIDA" />

        <TextView
            android:id="@+id/lblhs"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/lblobsgral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>
