<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_principal_pop"
    android:layout_width="800dp"
    android:layout_height="700dp"
    android:background="@drawable/round_shape_shadow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_shape"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.01"
            android:text="Información de Transportadora"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:text="Razón social:"
                android:textColor="?android:attr/textColorHint"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/txt_razon"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:text="Dirección: "
                android:textColor="?android:attr/textColorHint"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/txt_dir"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:lines="2"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:text="RFC:"
                android:textColor="?android:attr/textColorHint"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/txt_rfc"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Empresa que presta servicio a Go Natural Explorers."
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_info_aceptar"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.01"
            android:background="@color/colorPrimary"
            android:text="ACEPTAR"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>