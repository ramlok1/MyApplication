<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">


            <android.support.design.widget.TabLayout
                android:id="@+id/my_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#9d9a9a"
                app:tabTextColor="#9d9a9a" />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <com.example.mobilesdblack.ejemplo2.NonSwipeableViewPager
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/appbar_layout"></com.example.mobilesdblack.ejemplo2.NonSwipeableViewPager>

</LinearLayout>