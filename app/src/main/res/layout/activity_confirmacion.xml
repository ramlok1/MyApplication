<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#eeeeee"
    tools:context="com.example.mobilesdblack.ejemplo2.Confirmacion">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="#61a6dd"
        android:layout_below="@+id/lblFecha"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="SELECCIONAR CUPÓN"
            android:id="@+id/lblWizard1"
            android:textStyle="bold"
            android:background="#d7d5d5"
            android:textColor="#9d9a9a"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:id="@+id/border"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#000" />

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ENCUESTA"
            android:id="@+id/lblWizard3"
            android:textStyle="bold"
            android:background="#d7d5d5"
            android:textColor="#9d9a9a"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="FINALIZAR"
            android:id="@+id/lblWizard2"
            android:textStyle="bold"
            android:background="#2f3958"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout2">


        <Button
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Finalizar"
            android:id="@+id/btn_NextTemp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginBottom="45dp"
            android:background="#61a6dd"
            android:onClick="FinalizarEncuesta"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="¡GRACIAS!"
            android:id="@+id/lblGracias"
            android:textColor="#6E6E6E"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_NextTemp"
            android:weightSum="3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblMensajeFinal">

            <RelativeLayout
                android:layout_width="424dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/tripadvisor"
                    android:layout_marginTop="21dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Go Natural Playa del Carmen"
                    android:id="@+id/textView15"
                    android:textColor="#6E6E6E"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="394dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Go Natural Explorers"
                    android:id="@+id/textView16"
                    android:textColor="#6E6E6E"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/facebook"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/instagram"
                    android:layout_marginTop="29dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Go Natural Explorers"
                    android:id="@+id/textView26"
                    android:textColor="#6E6E6E"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/lblMensajeFinal"
            android:textColor="#6E6E6E"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:text="Mensaje final de agradecimiento"
            android:layout_below="@+id/lblGracias"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblFecha"
        android:background="#2f3958"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>